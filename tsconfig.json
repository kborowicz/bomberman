{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "electron",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "target": "es2018",
        "lib": [
            "es5", "es6", "dom", "dom.iterable"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    }
}